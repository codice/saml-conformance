<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <directory>${basedir}/src/bin</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
    </fileSets>
    <moduleSets>
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>org.codice.samlconf:ddf-plugins</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <includes>
                    <include>org.codice.samlconf:ddf-plugins</include>
                </includes>

                <outputDirectory>plugins</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>org.codice.samlconf.idp:idp-common</include>
                <include>org.codice.samlconf.idp:idp-single-logout</include>
                <include>org.codice.samlconf.idp:idp-web-sso</include>
                <include>org.codice.samlconf:security-common</include>
                <include>org.codice.samlconf:suites</include>
            </includes>

            <binaries>
                <excludes>
                    <exclude>org.codice.samlconf:ddf-plugins</exclude>
                </excludes>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>